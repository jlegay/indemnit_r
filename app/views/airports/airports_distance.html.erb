<div class="full-container">
  <div class="content-container">
    <div class="content airports-form">
      <h1>Itinéraire prévu</h1>
      <form action="/indemnities_amount" method="post">
        <div>
          <input list="airports_list" id="departure_airport" name="departure_airport" class= "airport-form-input" placeholder="Départ (aéroport)">
          <datalist id="airports_list">
            <% @airports.each do |airport| %>
              <option value="<%= airport %>">
            <% end %>
          </datalist>
        </div>
        <br>
        <div>
          <input list="airports_list" id="arrival_airport" name="arrival_airport" class= "airport-form-input" placeholder="Arrivée (aéroport)">
          <datalist id="arrival_airport">
            <% @airports.each do |airport| %>
              <option value="<%= airport %>">
            <% end %>
          </datalist>
        </div>
        <div id="input_form">
          <input type="submit" value="Valider" class="button full-button">
        </div>
      </form>
    </div>
  </div>
</div>



